<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form
      action="/signup"
      method="POST"
      class="needs-validation"
      novalidate
      onsubmit="validateForm(event)"
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username:</label>
        <input
          id="username"
          type="text"
          name="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input
          id="email"
          type="text"
          name="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          id="password"
          type="text"
          name="password"
          class="form-control"
          required
        />
      </div>
      <button type="submit" class="btn btn-success" formnovalidate>
        SignUp
      </button>
    </form>
  </div>
</div>
